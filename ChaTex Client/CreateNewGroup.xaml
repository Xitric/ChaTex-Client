<Window x:Class="ChaTex_Client.CreateNewGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChaTex_Client"
         xmlns:BLayer="clr-namespace:IO.Swagger.Model;assembly=BusinessLayer"  
        mc:Ignorable="d"
        Title="Create new group" Height="630" Width="500">
    <StackPanel>
        <Label Content="Create Group" HorizontalAlignment="Center" FontSize="20" Margin="8,8,8,8"/>
        <Grid>
            <Label Content="Enter group name:" HorizontalAlignment="Left" />
            <TextBox x:Name="TBgroupName" HorizontalAlignment="Left" Margin="110,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="330"/>
        </Grid>

        <Label Content="Selecet roles to add:" HorizontalAlignment="Left" Margin="0,20,0,0" />
        <Grid>
            <ListBox 
                    Height="110" 
                    x:Name="LBroles" 
                    SelectionMode="Multiple"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox 
                            Content="{Binding Name}"  
                            IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate> 
            </ListBox>
        </Grid>
        
        <Label Content="Select members to add:" HorizontalAlignment="Left" Margin="0,20,0,0" />
        <Grid>
            <ListBox 
                    Height="110"
                    x:Name="LBusers" 
                    SelectionMode="Multiple"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox 
                            Content="{Binding FirstName}"  
                            IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            
            </ListBox>
        </Grid>

        <Label Content="Select allowables for the group:" HorizontalAlignment="Left" Margin="0,20,0,0" />
        <Grid>
            <ListBox 
                    Height="110"
                    x:Name="LBallowable" 
                    SelectionMode="Multiple"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.CanContentScroll="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox 
                            Content="{Binding}"  
                            IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Grid>

        <Button Content="Create new group" Width="150" Click="Button_Click" Margin="71,0"/>

    </StackPanel>
</Window>
