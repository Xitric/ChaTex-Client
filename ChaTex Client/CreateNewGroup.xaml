<Window x:Class="ChaTex_Client.CreateNewGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChaTex_Client"
        mc:Ignorable="d"
        Title="CreateNewGroup" Height="300" Width="300">
    <Grid>
        <Label Content="Group name" HorizontalAlignment="Left" RenderTransformOrigin="0.658,-0.846" />
        <TextBox x:Name="TBgroupName" HorizontalAlignment="Left" Height="22" Margin="98,14,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <StackPanel Margin="0,28,0,0">

            <Label Content="Roles to add.." HorizontalAlignment="Left" />
            <ListBox x:Name="LBroles" ItemsSource="{Binding Groups}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Content="Members" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ListBox x:Name="LBmembers" ItemsSource="{Binding Groups}" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Create new group" Width="150" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
