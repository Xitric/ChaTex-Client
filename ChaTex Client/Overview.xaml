                    </TextBlock.Style>
                </TextBlock>
            </Grid>



            <Grid Width="122">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>
        
                <Button Name="btnSendMessage" Content="Send" Grid.Column="1" HorizontalAlignment="Right"  VerticalAlignment="Stretch" Background="#FF002864" BorderBrush="#FF002864" Click="btnSendMessage_Click" IsDefault="True"/>


            </Grid>
        </DockPanel>-->



        <!--lable for chat or channel name-->
        <Label Name="MessageName" Grid.Column="3" Grid.ColumnSpan="2"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="146,24,145,23"/>

        <!--channel edit button-->
        <Button Name="btnEditChannel" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center"  VerticalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Click="btnEditChannel_Click" Grid.ColumnSpan="2" Margin="3,12,3,13">
            <StackPanel Width="23" >
                <Image Source="pictures/button/settingsIcon.png" Height="19" RenderTransformOrigin="0.587,0.5" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
