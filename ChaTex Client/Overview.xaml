        <DockPanel  Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="3" Height="50" VerticalAlignment="Bottom" LastChildFill="False">

            <Grid Width="253">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230*"/>
                    <ColumnDefinition Width="23*"/>
                </Grid.ColumnDefinitions>
                <TextBox HorizontalContentAlignment="Stretch" Height="Auto" x:Name="MessageField" TextWrapping="Wrap" Width="Auto" BorderBrush="#FF002864" TextChanged="MessageField_TextChanged"/>
                <TextBlock IsHitTestVisible="False" Text="Type something here..." VerticalAlignment="Center" HorizontalAlignment="Left"  Foreground="DarkGray" Height="17" Width="144">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
