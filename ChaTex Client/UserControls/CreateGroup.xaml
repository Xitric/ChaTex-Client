<UserControl x:Class="ChaTex_Client.UserControls.CreateGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Background="#FF36393E">

    <ScrollViewer Name="svMasterScroll"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Hidden">
        <Border Padding="16">
            <DockPanel Name="dpnlSettings">
                <Button Name="btnCreateGroup"
                        IsEnabled="False"
                        Content="Create"
                        Background="#ff3f4247"
                        Padding="16"
                        Margin="0 24 0 0"
                        Height="48"
                        BorderThickness="0"
                        DockPanel.Dock="Bottom"
                        Click="btnCreateGroup_Click"/>
            </DockPanel>
        </Border>
    </ScrollViewer>
</UserControl>
